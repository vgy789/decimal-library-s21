#include <stdio.h>
#include "../big_decimal.h"

#test set_sign_positive
  big_decimal value = {0};
  set_sign_big(&value, 0);
  ck_assert(((value.bits[2] >> 30) & 1) == 0);
#test set_sign_negative
  big_decimal value = {0};
  set_sign_big(&value, 1);
  ck_assert(((value.bits[2] >> 30) & 1) == 1);
#test get_sign_positive
  big_decimal value = {0};
  set_sign_big(&value, 0);
  ck_assert(get_sign_big(value) == 0);
#test get_sign_negative
  big_decimal value = {0};
  set_sign_big(&value, 1);
  ck_assert(get_sign_big(value) == 1);
